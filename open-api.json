{
  "openapi": "3.0.3",
  "info": {
    "title": "File-Share API",
    "version": "0.1.0"
  },
  "paths": {
    "/files": {
      "post": {
        "summary": "Uploads a file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the key pair object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "publicKey": {
                      "type": "string",
                      "description": "The key that is usually distributed to consumers"
                    },
                    "privateKey": {
                      "type": "string",
                      "description": "The key that belongs to owner"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "When file is missing",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "The error message"
                    }
                  }
                }
              }
            }
          },
          "429": {
            "description": "When upload limit reached",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "The error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/{privateKey}": {
      "delete": {
        "summary": "Deletes the file",
        "parameters": [
          {
            "name": "privateKey",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content is returned"
          },
          "404": {
            "description": "When file does not exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "The error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/{publicKey}": {
      "get": {
        "summary": "Returns the file",
        "parameters": [
          {
            "name": "publicKey",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The file"
          },
          "404": {
            "description": "When file does not exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "The error message"
                    }
                  }
                }
              }
            }
          },
          "429": {
            "description": "When download limit reached",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "The error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
